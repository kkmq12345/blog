= render 'shared/notifications'
%h1 Pictures
  
%table{:border => 1}
  %thead
    %th Name
    %th Picture
    %th Actions
  %tbody
  - @pictures.each do |picture|
    %tr
      %td= picture.name
      %td= image_tag picture.link
      %td
        = link_to "Edit", edit_picture_path(picture)
        |
        = link_to "Delete", picture_path(picture), method: :delete, data: { confirm: "Are you sure you want to delete #{picture.name}"}
        
= link_to "Add Picture", new_picture_path